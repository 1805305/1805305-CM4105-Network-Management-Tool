#:kivy 1.11.1

#Imports the MainMenu file 

#:import MainMenu MainMenu



#Creates the Main Menu Screen and layout the widgets as desired

<MainMenu@Screen>:
    name: 'MainMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        MainMenuButtons:
            id: _Main_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height


<MainMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Basic Configurations'
        on_press: root.BasicConfMenuButton(*args)
    Button:
        text: 'Interface Configurations'
        on_press: root.IntConfMenuButton(*args)
    Button:
        text: 'Routing Configurations'
        on_press: root.RoutingIntMenuButton(*args)
    Button:
        text: 'Secuirty Configurations'
        on_press: root.SecurityConfMenuButton(*args)
    Button:
        text: 'Network Monitoring and Management'
        on_press: root.NetMonMenuButton(*args)
    Button:
        text: 'Device Information Extraction and Change Control'
        on_press: root.DeviceInfoMenuButton(*args)
    Button:
        text: 'Network Scanning and Traffic Monitoring'
        on_press: root.NetScanMenuButton(*args)
    Button:
        text: 'Network Testing'
        on_press: root.NetTestingMenuButton(*args)
    Button:
        text: 'Set Storage Location'
        on_press: root.BasicConfMenuButton(*args)


        
		
		
		
		
		
		
		
		