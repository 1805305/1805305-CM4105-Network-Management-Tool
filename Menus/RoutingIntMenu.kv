#:kivy 1.11.1

#:import RoutingIntMenu RoutingIntMenu

<RoutingIntMenu@Screen>:
    name: 'RoutingIntMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        RoutingIntMenuButtons:
            id: _Routing_Int_Conf_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<RoutingIntMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Configure A Static Route'
        on_press: root.RoutingIntStaticRouteButton(*args)
    Button:
        text: 'Configure A Default Route'
        on_press: root.RoutingIntDefaultRouteButton(*args)
    Button:
        text: 'Configure A Default Gateway'
        on_press: root.RoutingIntDefaultGatewayButton(*args)



<RoutingIntStaticRoute@Screen>:
    name: 'RoutingIntStaticRouteScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
