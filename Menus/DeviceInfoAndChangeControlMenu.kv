#:kivy 1.11.1


<DeviceInfoMenu@Screen>:
    name: 'DeviceInfoMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        DeviceInfoMenuButtons:
            id: _Device_Info_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<DeviceInfoMenuButtons@BoxLayout>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Poll And Extract Device Information'
    Button:
        text: 'Change Control'


        
		
		
		
		
		
		
		
		