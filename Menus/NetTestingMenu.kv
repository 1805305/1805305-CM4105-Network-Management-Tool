#:kivy 1.11.1

#:import NetTestingMenu NetTestingMenu

<NetTestingMenu@Screen>:
    on_pre_enter: app.current_screen = "Network Testing"
    on_pre_enter: app.previous_screen.append('NetTestingMenuScreen')
    name: 'NetTestingMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        NetTestingMenuButtons:
            id: _Net_Testing_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<NetTestingMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Ping A Network Device'
        on_release: root.NetTestingPingButton(*args)




<NetTestingPing>:
    on_pre_enter: app.current_screen = "Network Testing - Ping"
    on_pre_enter: app.previous_screen.append('NetTestingPingScreen')
    name: 'NetTestingPingScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        NetTestingPingLayout:
            id: _Net_Testing_Ping_Layout_
            main_menu_root: root
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 15
        IPv4TargetDeviceLayout
            id: _IPv4_Target_Device_Layout_
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
                    
<NetTestingPingLayout@GridLayout>:
    orientation: 'vertical'
    cols: 2
    padding: 5
    spacing: 2
    Label: 
        text: 'Enter IPv4 Address of  Target Device'
        size_hint_y: None
        height: IPv4AddressTextInput.height
    IPv4AddressInput:
        id: IPv4AddressTextInput


        
		
		
		
		
		
		
		
		