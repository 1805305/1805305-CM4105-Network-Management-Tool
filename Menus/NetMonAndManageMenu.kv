#:kivy 1.11.1

#:import NetMonAndManageMenu NetMonAndManageMenu

<NetMonMenu@Screen>:
    on_pre_enter: app.current_screen = "Network Monitoring and Management"
    on_pre_enter: app.previous_screen.append('NetMonMenuScreen')
    name: 'NetMonMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        NetMonMenuButtons:
            id: _Net_Mon_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<NetMonMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'SPAN Configuration'
        on_release: root.NetMonSpanConfButton(*args)



<NetMonSpanConf>:
    on_pre_enter: app.current_screen = "Network Monitoring and Management - SPAN Configuration"
    on_pre_enter: app.previous_screen.append('NetMonSpanConfScreen')
    name: 'NetMonSpanConfScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    FloatLayout:
        #anchor_x: 'center'
        #anchor_y: 'center'
        NetMonSpanConfLayout:
            id: _Net_Mon_Span_Conf_Layout_
            main_menu_root: root
            pos_hint:{'center_x':0.5, 'y':0.5}
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 15
        IPv4TargetDeviceLayout
            id: _IPv4_Target_Device_Layout_
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
            on_release: root.NetMonSpanConfExecute()
                    
<NetMonSpanConfLayout@GridLayout>:
    orientation: 'vertical'
    rows: 3
    padding: 5
    spacing: 40
    NetMonSpanConfSessionNoLayout:
        id: NetMonSpanConfSessionNoLayout
    NetMonSpanConfSourcePortLayout:
        id: NetMonSpanConfSourcePortLayout
    NetMonSpanConfDestinationPortLayout:
        id: NetMonSpanConfDestinationPortLayout


<NetMonSpanConfSessionNoLayout@GridLayout>:
    orientation: 'vertical'
    rows: 1
    #padding: 5
    spacing: 2
    Label: 
        text: 'Enter SPAN Session ID'
        size_hint_y: None
        height: SPANSessionIDTextInput.height
    TextInput:
        id: SPANSessionIDTextInput
        hint_text:'Session ID (1-66)'
        multiline: False
        size_hint_y: None
        height: '32dp' 
    Label:

<NetMonSpanConfSourcePortLayout@GridLayout>:
    orientation: 'vertical'
    rows: 1
    #padding: 5
    spacing: 2
    Label: 
        text: 'Enter SPAN Source Port'
        size_hint_y: None
        height: InterfaceNumberTextInput.height
    Spinner:
        id: InterfaceTypeSpinner
        size_hint: 1, None
        height: '32dp'
        sync_height: True
        text: 'Interface Type'
        values: 'FastEthernet', 'GigabitEthernet', 'VLAN'
    TextInput:
        id: InterfaceNumberTextInput
        hint_text:'Interface Number'
        multiline: False
        size_hint_y: None
        height: '32dp' 
    

<NetMonSpanConfDestinationPortLayout@GridLayout>:
    orientation: 'vertical'
    rows: 1
    #padding: 5
    spacing: 2
    Label: 
        text: 'Enter SPAN Destination Port'
        size_hint_y: None
        height: InterfaceNumberTextInput.height
    Spinner:
        id: InterfaceTypeSpinner
        size_hint: 1, None
        height: '32dp'
        sync_height: True
        text: 'Interface Type'
        values: 'FastEthernet', 'GigabitEthernet', 'VLAN'
    TextInput:
        id: InterfaceNumberTextInput
        hint_text:'Interface Number'
        multiline: False
        size_hint_y: None
        height: '32dp' 



        
		
		
		
		
		
		
		
		