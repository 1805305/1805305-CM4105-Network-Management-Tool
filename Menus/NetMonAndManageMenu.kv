#:kivy 1.11.1

#:import NetMonAndManageMenu NetMonAndManageMenu

<NetMonMenu@Screen>:
    on_pre_enter: app.current_screen = "Network Monitoring and Management"
    on_pre_enter: app.previous_screen.append('NetMonMenuScreen')
    name: 'NetMonMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        NetMonMenuButtons:
            id: _Net_Mon_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<NetMonMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'SPAN Configuration'
        on_release: root.NetMonSpanConfButton(*args)



<NetMonSpanConf>:
    on_pre_enter: app.current_screen = "Network Monitoring and Management - SPAN Configuration"
    on_pre_enter: app.previous_screen.append('NetMonSpanConfScreen')
    name: 'NetMonSpanConfScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        NetMonSpanConfLayout:
            id: _Net_Mon_Span_Conf_Layout_
            main_menu_root: root
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
                    
<NetMonSpanConfLayout@GridLayout>:
    orientation: 'vertical'
    cols: 2
    padding: 5
    spacing: 2
    Label: 
        text: 'Enter IPv4 Address of  Target Device'
        size_hint_y: None
        height: IPv4AddressTextInput.height
    IPv4AddressInput:
        id: IPv4AddressTextInput



        
		
		
		
		
		
		
		
		