#:kivy 1.11.1


<SecurityConfMenu@Screen>:
    name: 'SecurityConfMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BottomMenuBar:
            id: _Bottom_Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        SecurityConfMenuButtons:
            id: _Security_Conf_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Bottom_Menu_Bar.height



<SecurityConfMenuButtons@BoxLayout>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Configure Local Username Database'
    Button:
        text: 'Enable/Disable Service Password Encryption'
    Button:
        text: 'Configure Aux, Console or VTY Lines'



        
		
		
		
		
		
		
		
		