#:kivy 1.11.1

#:import IntConfMenu IntConfMenu

<IntConfMenu@Screen>:
    on_pre_enter: app.current_screen = "Interface Configuration"
    name: 'IntConfMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        IntConfMenuButtons:
            id: _Int_Conf_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<IntConfMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Assign IPv4 Address'
        on_release: root.IntConfAssignIPv4Button(*args)
    Button:
        text: 'Ethernet Interface Configuration'
        on_release: root.IntConfEthernetIntButton(*args)
        
		




<IntConfAssignIPv4>:
    on_pre_enter: app.current_screen = "Interface Configuration - Assign IPv4 Address"
    name: 'IntConfAssignIPv4Screen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        IntConfAssignIPv4Layout:
            id: _Int_Conf_Assign_IPv4_Layout_
            main_menu_root: root
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
                    
<IntConfAssignIPv4Layout@GridLayout>:
    orientation: 'vertical'
    cols: 2
    padding: 5
    spacing: 2
    Label: 
        text: 'Enter IPv4 Address of Device'
        size_hint_y: None
        height: IPv4AddressTextInput.height
    IPv4AddressInput:
        id: IPv4AddressTextInput






<IntConfEthernetInt>:
    on_pre_enter: app.current_screen = "Interface Configuration - Ethernet Interface Configuration"
    name: 'IntConfEthernetIntScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        IntConfEthernetIntLayout:
            id: _Int_Conf_Ethernet_Int_Layout_
            main_menu_root: root
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
            



        
<IntConfEthernetIntLayout@GridLayout>:
    orientation: 'vertical'
    cols: 2
    padding: 5
    spacing: 2
    Label: 
        text: 'Enter IPv4 Address of Device'
        size_hint_y: None
        height: IPv4AddressTextInput.height
    IPv4AddressInput:
        id: IPv4AddressTextInput
		
		
		
		
		
		