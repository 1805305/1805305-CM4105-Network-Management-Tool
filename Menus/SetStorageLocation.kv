#:kivy 1.11.1

#:import SetStorageLocation SetStorageLocation



<SetStorageLocation>:
    on_pre_enter: app.current_screen = "Set Storage Location"
    name: 'SetStorageLocationScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        SetStorageLocationFileChooser:
            id: _Set_Storage_Location_File_Chooser_
            main_menu_root: root
            padding: 25
            size_hint: 0.9, None
            height: root.height - _Menu_Bar.height - _Execute_Button_.height
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
            
  

<SetStorageLocationFileChooser@BoxLayout>
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: '48dp'

        ToggleButton:
            text: 'Icon View'
            state: 'down'
            group: 'filechooser'
            on_release: filechooser.view_mode = 'icon'

        ToggleButton:
            text: 'List View'
            group: 'filechooser'
            on_release: filechooser.view_mode = 'list'

    FileChooser:
        id: filechooser
        
        FileChooserIconLayout
        FileChooserListLayout
        
    
        
    



