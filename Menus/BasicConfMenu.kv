#:kivy 1.11.1

#:import BasicConfMenu BasicConfMenu

<BasicConfMenu@Screen>:
    name: 'BasicConfMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BottomMenuBar:
            id: _Bottom_Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BasicConfMenuButtons:
            id: _Basic_Conf_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Bottom_Menu_Bar.height



<BasicConfMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Set Hostname'
        on_press: root.BasicConfHostnameButton(*args)
    Button:
        text: 'Set Domain Name'
        on_press: root.BasicConfDomainButton(*args)
    Button:
        text: 'Reload Device'
        on_press: root.BasicConfReloadButton(*args)





