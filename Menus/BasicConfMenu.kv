#:kivy 1.11.1

#:import BasicConfMenu BasicConfMenu


#This KV file defines the various Basic Configuration screens and widgets it is linked to the BasicConfMenu.py for defining the type of widget and the functions that are called

<BasicConfMenu@Screen>:
    on_pre_enter: app.current_screen = "Basic Configuration"
    on_pre_enter: app.previous_screen.append('BasicConfMenuScreen')
    name: 'BasicConfMenuScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BasicConfMenuButtons:
            id: _Basic_Conf_Menu_Buttons_
            main_menu_root: root
            size_hint: 0.9, None
            padding: 50
            height: root.height - _Menu_Bar.height



<BasicConfMenuButtons>:
    orientation: 'vertical'
    padding: 5
    spacing: 2
    Button:
        text: 'Set Hostname'
        on_release: root.BasicConfHostnameButton(*args)
    Button:
        text: 'Set Domain Name'
        on_release: root.BasicConfDomainButton(*args)
    Button:
        text: 'Reload Device'
        on_release: root.BasicConfReloadButton(*args)





<BasicConfHostname>:
    on_pre_enter: app.current_screen = "Basic Configuration - Hostname"
    on_pre_enter: app.previous_screen.append('BasicConfHostnameScreen')
    name: 'BasicConfHostnameScreen'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MenuBar:
            id: _Menu_Bar
            main_menu_root: root
            size_hint: 1, None
            height: 50
    FloatLayout:
        #anchor_x: 'center'
        #anchor_y: 'center'
        BasicConfHostnameLayout:
            id: _Basic_Conf_Hostname_Layout_
            pos_hint:{'center_x':0.5, 'y':0.5}
            main_menu_root: root
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 5
        Button:
            id: _Device_Credentials_Button_
            text: 'Set Device \nCredentials'
            size_hint: 0.16, 0.08
            on_release: root.OpenCredentialPopup()
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 15
        IPv4TargetDeviceLayout
            id: _IPv4_Target_Device_Layout_
            size_hint: 0.9, None
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 5
        Execute:
            id: _Execute_Button_
            on_release: root.BasicConfHostnameExecute()
            



        
<BasicConfHostnameLayout@GridLayout>:
    orientation: 'vertical' 
    rows: 2
    padding: 5
    spacing: 2
    Label:   
        id: HostnameCompleteLabel
        markup: True
        text: ""
        height: '32dp'
    GridLayout:
        orientation: 'vertical' 
        cols: 2
        padding: 5
        spacing: 2
        Label: 
            text: 'Enter Desired Hostname of Device'
            size_hint_y: None
            height: HostnameTextInput.height
        TextInput:
            id: HostnameTextInput
            hint_text:'Device Hostname'
            multiline: False
            size_hint_y: None
            height: '32dp'
    
        
    




