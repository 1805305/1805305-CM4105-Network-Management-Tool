#:kivy 1.11.1

#:import MenuBar MenuBar

#This KV file defines the Menu bar and the widget type is defined in MenuBar.py

<MenuBar>:
    
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title:  app.current_screen
                with_previous: False           
            ActionOverflow:
            ActionButton:
                text: 'Return To Main Menu'
                on_release: root.ReturnToMainMenu(*args)
            ActionButton:
                text: 'Set Storage Location'
                on_release: root.SetStorageLocationButton(*args)
            ActionButton:
                important: False
                text: 'Options'
                disabled: True
            ActionButton:
                text: 'Exit'
                on_release: app.stop()


        