#:kivy 1.11.1

#:import MenuBar MenuBar



<MenuBar>:
    
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            #use_separator: True
            ActionPrevious:
                title: 'Action Bar'
                on_release: app.GoPreviousScreen()
            ActionOverflow:
            ActionButton:
                #important: True
                text: 'Return To Main Menu'
                on_release: root.ReturnToMainMenu(*args)
            ActionButton:
                important: False
                text: 'Set Storage Location'
                on_release: root.SetStorageLocationButton(*args)
            ActionButton:
                important: False
                text: 'Options'
                disabled: True
            ActionButton:
                text: 'Exit Application'
                on_release: app.stop()


        