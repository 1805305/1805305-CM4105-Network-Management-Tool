#:kivy 1.11.1

#:import MenuBar MenuBar



<MenuBar>:
    
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title:  app.current_screen
                on_release: app.GoPreviousScreen()
            ActionOverflow:
            ActionButton:
                text: 'Return To Main Menu'
                on_release: root.ReturnToMainMenu(*args)
                on_release: app.current_screen = "Main Menu"
            ActionButton:
                text: 'Set Storage Location'
                on_release: root.SetStorageLocationButton(*args)
            ActionButton:
                important: False
                text: 'Options'
                disabled: True
            ActionButton:
                text: 'Exit'
                on_release: app.stop()


        